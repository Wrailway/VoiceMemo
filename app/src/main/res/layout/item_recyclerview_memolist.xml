<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    android:gravity="center_horizontal">
    <!--cardCornerRadius圆角的半径 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp" >

        <TextView
            android:id="@+id/tv_memoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海内存知己，天涯若比邻，下一句是什么，我也想不起来"
            android:textColor="#363636"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_newTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_below="@id/tv_memoText"
            android:text="创建:2018-03-27 08:08:08"
            android:textColor="#363636"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_updataTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_below="@id/tv_memoText"
            android:layout_alignParentRight="true"
            android:text="上次修改:2018-03-27 08:08:08"
            android:textColor="#363636"
            android:textSize="11dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
